{
  "PathBase": null,
  "AllowedHosts": "*",
  "TimeZone": "America/Sao_Paulo",
  "Database": {
    "Postgres": {
      "Host": "tc-agro-postgres",
      "Port": 5432,
      "Database": "tc-agro-farm-db",
      "MaintenanceDatabase": "postgres",
      "UserName": "postgres",
      "Password": "postgres",
      "Schema": "public",
      "ConnectionTimeout": 30,
      "MinPoolSize": 2,
      "MaxPoolSize": 20
    }
  },
  "Cache": {
    "Redis": {
      "Host": "tc-agro-redis",
      "Port": 6379,
      "Password": ""
    }
  },
  "Messaging": {
    "RabbitMQ": {
      "Host": "tc-agro-rabbitmq",
      "Port": 5672,
      "ManagementPort": 15672,
      "VirtualHost": "/",
      "Exchange": "farm.events",
      "UserName": "guest",
      "Password": "guest",
      "AutoProvision": true,
      "Durable": true,
      "UseQuorumQueues": false,
      "AutoPurgeOnStartup": false
    }
  },
  "Services": {
    "Identity": {
      "HttpPort": 5001
    },
    "Farm": {
      "HttpPort": 5002
    },
    "SensorIngest": {
      "HttpPort": 5003
    },
    "AnalyticsWorker": {
      "HttpPort": 5004
    },
    "Dashboard": {
      "HttpPort": 5005
    }
  },
  "Auth": {
    "Jwt": {
      "SecretKey": "your-256-bit-secret-key-change-in-production-12345678901234567890",
      "Issuer": "tc-agro-identity-service",
      "Audience": [
        "tc-agro-farm-service"
      ]
    }
  },
  "Logging": {
    "LogLevel": {
      "Wolverine": "Warning",
      "Default": "Information",
      "System.Net.Http.HttpClient": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Telemetry": {
    "Grafana": {
      "_comment": "Grafana Agent Configuration - In Docker Compose: set Agent.Enabled=true to export traces/logs via OTLP to otel-collector. Host should be 'otel-collector' (Docker service name).",
      "Agent": {
        "Host": "otel-collector-agent.observability.svc.cluster.local",
        "OtlpGrpcPort": 4317,
        "OtlpHttpPort": 4318,
        "MetricsPort": 8889,
        "Enabled": true,
        "_comment": "Production: OTEL DaemonSet in k3d cluster. ConfigMap overrides these values."
      },
      "Otlp": {
        "Endpoint": "http://otel-collector-agent.observability.svc.cluster.local:4317",
        "Protocol": "grpc",
        "Headers": null,
        "TimeoutSeconds": 10,
        "Insecure": true,
        "_comment": "Production uses gRPC on port 4317. ConfigMap overrides these values."
      }
    }
  },
  "Serilog": {
    "_comment": "Development: Serilog outputs to Console (Compact JSON) AND OpenTelemetry Collector via OTLP. OTEL Collector routes to Loki. UseCustomSerilog() adds semantic enrichers (trace_id, span_id, service.name).",
    "Using": [ "Serilog.Sinks.Console", "Serilog.Formatting.Compact", "Serilog.Sinks.OpenTelemetry" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "restrictedToMinimumLevel": "Debug"
        }
      },
      {
        "Name": "OpenTelemetry",
        "Args": {
          "endpoint": "http://otel-collector-agent.observability.svc.cluster.local:4318/v1/logs",
          "protocol": "HttpProtobuf",
          "includeProperties": true,
          "includeFormattedMessage": true,
          "resourceAttributes": {
            "service.name": "tc-agro-farm",
            "service.namespace": "tc-agro",
            "deployment.environment": "production"
          },
          "restrictedToMinimumLevel": "Information"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  }
}
